{
  "name": "integrauth-website",
  "version": "1.0.0",
  "description": "IntegrAuth Official Website - Enterprise IAM and API Security",
  "main": "index.html",
  "scripts": {
    "dev": "browser-sync start --server --files \"**/*.html, **/*.css, **/*.js\" --port 3000 --no-notify",
    "dev:live": "live-server --port=3000 --host=localhost --open=/index.html --watch=.",
    "start": "npm run dev",
    "build:css": "cleancss -o css/styles.min.css css/styles.css",
    "build:js": "terser js/functions.js -o js/functions.min.js --compress --mangle",
    "build:html": "html-minifier-terser --input-dir ./ --output-dir ./dist --file-ext html --remove-comments --collapse-whitespace --minify-js true --minify-css true",
    "build": "npm run build:css && npm run build:js && npm run build:html"
  },
  "keywords": [
    "IAM",
    "API Security",
    "IntegrAuth"
  ],
  "author": "IntegrAuth",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "clean-css-cli": "^5.6.3",
    "html-minifier-terser": "^7.2.0",
    "live-server": "^1.2.2",
    "terser": "^5.44.1"
  },
  "repository": {
    "type": "git",
    "url": "http://local_proxy@127.0.0.1:24712/git/integrauth/website"
  }
}
